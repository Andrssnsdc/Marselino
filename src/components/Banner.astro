<style>
    :root {
        --spread: 90deg;
        --shimmer-color: var(--white-smoke);
        --radius: 50px;
        --speed: 5s;
        --cut: 0.1em;
        --bg: radial-gradient(ellipse 80% 50% at 50% 120%, rgba(38, 61, 191), rgba(56, 84, 166, 0.95));
    }
    p{
        font-weight: 600;
    }

    @keyframes subtleFadeInOut {
        0%, 100% { opacity: 0; transform: scale(1.05) rotate(2deg); }
        20%, 80% { opacity: 1; transform: scale(1) rotate(0deg); }
    }

    @keyframes fluidBuzoAnimation {
        0% {
        transform: translate(0%, 0%); /* Empieza en la esquina inferior izquierda con 50% fuera y 33% visible por arriba */
    }
    /* 25%: La imagen se mueve hacia arriba, mostrando solo el 33% de la parte inferior */
    20% {
        transform: translate(50%, -25%)scale(1.25); /* Sube para que solo el 33% inferior esté visible */
    }
    /* 50%: La imagen se desliza hacia la derecha hasta que solo se vea el 50% de la parte derecha */
    30% {
        transform: translate(50%, 50%)scale(1.25); /* Desplazamiento horizontal hacia la derecha */
    }
    /* 75%: La imagen baja y solo el 33% superior se ve */
    60% {
        transform: translate(-50%, 50%); /* Baja, mostrando solo el 33% superior */
    }
    /* 100%: La imagen vuelve a la posición inicial */
    80% {
        transform: translate(-50%, 0%)scale(1.25); /* Regresa a su posición inicial */
    }
    90% {
        transform: translate(-50%, -25%)scale(1.25); /* Regresa a su posición inicial */
    }
    100% {
        transform: translate(0%, 0%); /* Regresa a su posición inicial */
    }

    }

   

    .banner {
        display: flex;
        height: 66vh;
        margin-top: 60px;
        
    }

    .banner-left {
        flex: 1;
        position: relative;
        overflow: hidden;
    }

    .banner-right {
        flex: 2;
        position: relative;
        overflow: hidden;
        position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
        
        
        
    }
    .banner-text{
        display: flex;
        flex-direction: column;
        z-index: 10;
        margin-right: 20px;
        
    }

    .banner-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0;
        animation: subtleFadeInOut 15s infinite;
        z-index: 10;
    }
    .banner-image:nth-child(1) { animation-delay: 0s; }
    .banner-image:nth-child(2) { animation-delay: 5s; }
    .banner-image:nth-child(3) { animation-delay: 10s; }

    .banner-content {
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
        height: 100%;
        z-index: 2;
        color: var(--white-smoke);
        text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
        text-align: right;
        align-items: center;
        
        
    }

    .background-static {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
    }
    
    .buzo-animation {
        position: absolute;
        object-fit: fill;
        height: 100%;
        animation: fluidBuzoAnimation 30s infinite ease-in;
        overflow: hidden;
        z-index: 1;
    }

    
    
    /* Ajustes responsivos */
    @media (max-width: 768px) {
        .banner {
       flex-direction: column;
        height: 90vh;
    }
    .cta-button{width: 80%;}

    @keyframes fluidBuzoAnimation {
        0% {
        transform: translate(0%, 0%)scale(0.5); /* Empieza en la esquina inferior izquierda con 50% fuera y 33% visible por arriba */
    }
    /* 25%: La imagen se mueve hacia arriba, mostrando solo el 33% de la parte inferior */
    20% {
        transform: translate(25%, -25%)scale(1.1); /* Sube para que solo el 33% inferior esté visible */
    }
    /* 50%: La imagen se desliza hacia la derecha hasta que solo se vea el 50% de la parte derecha */
    30% {
        transform: translate(25%, 50%)scale(1.1); /* Desplazamiento horizontal hacia la derecha */
    }
    /* 75%: La imagen baja y solo el 33% superior se ve */
    60% {
        transform: translate(-25%, 50%); /* Baja, mostrando solo el 33% superior */
    }
    /* 100%: La imagen vuelve a la posición inicial */
    80% {
        transform: translate(-25%, 0%)scale(1.1); /* Regresa a su posición inicial */
    }
    90% {
        transform: translate(-25%, -25%)scale(1.1); /* Regresa a su posición inicial */
    }
    100% {
        transform: translate(0%, 0%)scale(0.5); /* Regresa a su posición inicial */
    }
   

        
    
    }
</style>
