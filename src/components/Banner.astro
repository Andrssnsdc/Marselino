<style>
    :root {
        --spread: 90deg;
        --shimmer-color: var(--white-smoke);
        --radius: 50px;
        --speed: 5s;
        --cut: 0.1em;
        --bg: radial-gradient(ellipse 80% 50% at 50% 120%, rgba(38, 61, 191), rgba(56, 84, 166, 0.95));
    }

    h3{
        font-weight: 300;
    }
    h2{
        font-weight: 600;
    }
 
    h1, h2, h3, h4{
        margin: 0;
    }

    @keyframes subtleFadeInOut {
        0%, 100% { opacity: 0; transform: scale(1.08) rotate(2deg); }
        20%, 80% { opacity: 1; transform: scale(1) rotate(0deg); }
    }

    @keyframes fluidBuzoAnimation {
        0% {
        transform: translate(0%, 0%); /* Empieza en la esquina inferior izquierda con 50% fuera y 33% visible por arriba */
    }
    /* 25%: La imagen se mueve hacia arriba, mostrando solo el 33% de la parte inferior */
    20% {
        transform: translate(50%, -25%)scale(1.25); /* Sube para que solo el 33% inferior esté visible */
    }
    /* 50%: La imagen se desliza hacia la derecha hasta que solo se vea el 50% de la parte derecha */
    30% {
        transform: translate(50%, 50%)scale(1.25); /* Desplazamiento horizontal hacia la derecha */
    }
    /* 75%: La imagen baja y solo el 33% superior se ve */
    60% {
        transform: translate(-50%, 50%); /* Baja, mostrando solo el 33% superior */
    }
    /* 100%: La imagen vuelve a la posición inicial */
    80% {
        transform: translate(-50%, 0%)scale(1.25); /* Regresa a su posición inicial */
    }
    90% {
        transform: translate(-50%, -25%)scale(1.25); /* Regresa a su posición inicial */
    }
    100% {
        transform: translate(0%, 0%); /* Regresa a su posición inicial */
    }

    }

   

    .banner {
        display: flex;
        height: 66vh;
        margin-top: 30px;
        mask-image: linear-gradient(black 92%, transparent);
        gap: 24px;
        padding: 0 24px 0 24px;

    }

    .banner-left {
        flex: 1;
        position: relative;
        overflow: hidden;
        border-radius: 40px;
       
    
    }

    .banner-right {
        flex: 2;
        position: relative;
        overflow: hidden;
        position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    
    border-radius: 40px;
    padding: 24px;
        
        
    }
    .banner-text{
        display: flex;
        flex-direction: column;
        z-index: 10;
        color: var(--medium-blue);
        gap: 32px;
    }

    .banner-envio{
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 12px;
        justify-content: end;
        margin-top: 30px;
        color: var(--rust-red);
        
    }

    .banner-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0;
        animation: subtleFadeInOut 30s ;
        animation-iteration-count: infinite;
        z-index: 10;
        
    }
    .banner-image:nth-child(1) { animation-delay: 0s; }
    .banner-image:nth-child(2) { animation-delay: 10s; }
    .banner-image:nth-child(3) { animation-delay: 20s; }
    .banner-image:nth-child(4) { animation-delay: 30s; }
    

    .banner-content {
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
        height: 100%;
        z-index: 2;
        color: var(--white-smoke);
      
        text-align: right;
        align-items: center;
        gap:18px;
        
        
    }

    .background-static {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
        mask-image: linear-gradient(black 92%, transparent);
    }
    
    .buzo-animation {
        position: absolute;
        object-fit: fill;
        height: 100%;
        animation: fluidBuzoAnimation 40s infinite ease-in;
        overflow: hidden;
        z-index: 1;
    }

    
    
    /* Ajustes responsivos */
    @media (max-width: 768px) {
        .banner {
        flex-direction: column;
        height: 100vh;
        align-items: center;
        padding: 0 12px 0 12px;
        
    } 
    .banner-left{
       
        width: 100%;
    }
    .banner-right{
        padding: 12px;
    }

    .banner-text{
        gap: 12px;
    }
    

    .cta-button{width: 80%;}
}

